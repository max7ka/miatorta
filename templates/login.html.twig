{% extends 'basecenter.html.twig' %}

{% block body %}

<form action="{{ path('login') }}" method="post">

    <h3>Вход</h3>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group row">
        <label class="col-sm-4 col-form-label col-form-label-sm" for="username">Пользователь:</label>
        <div class="col-sm-8">
            <input class="form-control form-control-sm" type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label col-form-label-sm" for="password">Пароль:</label>
        <div class="col-sm-8">
            <input class="form-control form-control-sm" type="password" id="password" name="_password" />
        </div>
    </div>
        <button type="submit" name="login" class="btn btn-primary">Далее</button>
    </div>

</form>    

        
{% endblock %}

{% block javascripts %}
{% endblock %}
